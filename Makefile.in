# Placemakers
CC = @cc@
AR = @ar@
DESTDIR = @destdir@
PREFIX = @prefix@
BUILDDIR = @builddir@
SHARED = @shared@
STATIC = @static@

SOURCE_DIRS += src
INCLUDE_DIRS += include
SOURCE_C += ht.c ht_iter.c

STATIC_LIB = $(BUILDDIR)/libht.a
SHARED_LIB = $(BUILDDIR)/libht.so

# General options
C_FLAGS = -Wall -std=c11 -fPIC -MMD -MP

# Remove optmization and add debug flag if in debug mode
ifeq ($(DEBUG), 1)
C_FLAGS += -O0 -g 
else
C_FLAGS += -O3 -Werror
endif

OBJECTS += $(foreach m, $(SOURCE_C), $(addprefix $(BUILDDIR)/, $(addsuffix .o,$(basename $(m)))))

DEPS += $(foreach m, $(SOURCE_C), $(addprefix $(BUILDDIR)/, $(addsuffix .d,$(basename $(m)))))

INCLUDES = $(foreach m, $(INCLUDE_DIRS), $(addprefix -I , $(m)/))

vpath %.c $(SOURCE_DIRS)

TARGETS =
ifeq ($(SHARED), 1)
TARGETS += $(SHARED_LIB)
endif
ifeq ($(STATIC), 1)
TARGETS += $(STATIC_LIB)
endif

all: $(TARGETS)

$(STATIC_LIB): $(OBJECTS)
	$(AR) rcs -o $@ $^

$(SHARED_LIB): $(OBJECTS)
	$(CC) -shared $^ -o $@

$(BUILDDIR)/%.o: %.c | $(BUILDDIR)
	$(CC) -c $(C_FLAGS) $(INCLUDES) $< -o $@

$(BUILDDIR):
	mkdir -p $@

clean:
	rm -rf $(BUILDDIR) $(DESTDIR)

install: $(TARGETS)
	install -d $(DESTDIR)$(PREFIX)/lib/
	install -m 644 $^ $(DESTDIR)$(PREFIX)/lib/
	install -d $(DESTDIR)$(PREFIX)/include/
	install -m 644 $(INCLUDE_DIRS)/* $(DESTDIR)$(PREFIX)/include/

-include $(DEPS)
