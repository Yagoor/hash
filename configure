usage() {
    echo "$0 TODO"
    exit 1
}

CC=gcc
AR=ar
PREFIX=/usr/local
DESTDIR=
BUILDDIR=_build
SHARED=0
STATIC=0

while [[ $# -gt 0 ]]; do
  key="$1"

  case $key in 
    --*=*)
      VALUE=`echo $1 | sed 's/^[^=]*=//g'`
      ;;
  esac

  case $key in
    --prefix)
      shift
      PREFIX="$1"
      shift
      ;;
    --prefix=*)
      PREFIX="$VALUE"
      shift
      ;;
    --destdir)
      shift
      DESTDIR="$1"
      shift
      ;;
    --destdir=*)
      DESTDIR="$VALUE"
      shift
      ;;
    --builddir)
      shift
      BUILDDIR="$1"
      shift
      ;;
    --builddir=*)
      BUILDDIR="$VALUE"
      shift
      ;;
    --shared)
      SHARED=1
      shift
      ;;
    --static)
      STATIC=1
      shift
      ;;            
    *)
      shift
      ;;
  esac
done

if [ "$STATIC" == "0" -a "$SHARED" == "0" ]; then
    usage
fi

# Escape invalid characters in sed

# Replace the placemakers
data=$(cat Makefile.in)
data=`echo "$data" | sed "s|@cc@|$CC|g"`
data=`echo "$data" | sed "s|@ar@|$AR|g"`
data=`echo "$data" | sed "s|@destdir@|$DESTDIR|g"`
data=`echo "$data" | sed "s|@prefix@|$PREFIX|g"`
data=`echo "$data" | sed "s|@builddir@|$BUILDDIR|g"`
data=`echo "$data" | sed "s|@shared@|$SHARED|g"`
data=`echo "$data" | sed "s|@static@|$STATIC|g"`

echo "$data" > Makefile
